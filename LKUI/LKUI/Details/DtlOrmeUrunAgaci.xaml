        <Label Content="Zemin2 Çözgü T.Ad::" Grid.Row="8" />
        <Label Content="Hav Çözgü Tel Ad.:" Grid.Row="9" />
        <Label Content="Tost Hav Boyu mm:" Grid.Row="10" />
        <Label Content="Tarak Adedi:" Grid.Row="11" />
        <Label Content="Tarak Eni(cm):" Grid.Row="12" />
        <Label Content="Ham Eni(cm):" Grid.Row="13" />
        <Label Content="Mamül Eni(cm):" Grid.Row="14" />
