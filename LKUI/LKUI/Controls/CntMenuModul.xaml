<UserControl x:Class="LKUI.Controls.CntMenuModul"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid x:Name="GridMenuModul" >
        <!---->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Aciklama}" FontFamily="Courier New" FontWeight="ExtraBold" VerticalAlignment="Center" Grid.Row="0" FontSize="18" Margin="5" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" />
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="Black" >
            <StackPanel x:Name="StackItems" Orientation="Vertical"/>
        </Border>
        
    </Grid>
</UserControl>
