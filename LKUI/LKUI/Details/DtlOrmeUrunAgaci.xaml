        <Label Content="İplik Sevk Rackları" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="5" FontWeight="Bold" />
        <Label Content="Ham Tost M2 Ağırlık" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="9" FontWeight="Bold" />
