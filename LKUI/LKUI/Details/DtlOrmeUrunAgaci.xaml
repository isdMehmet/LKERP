        <Label Content="M.Hav Yüksek(mm):" Grid.Row="16" />
        <Label Content="Tahar No:" Grid.Row="17" Margin="0,2,0,25" Grid.RowSpan="2" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="2" x:Name="TxtTipNo" Margin="2,5,2,26" Text="{Binding TipNo}" Grid.RowSpan="2" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="3" x:Name="TxtTipAdı" Margin="2" Text="{Binding TipAdi}"/>
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="4" x:Name="TxtNumuneTipNo" Margin="2" Text="{Binding NumuneTipNo}"/>
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="5" x:Name="TxtAtkiSikligiTezÜ" Margin="2" Text="{Binding MaySiklik}"/>
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="6" x:Name="TxtCozguSikligi" Margin="2" Text="{Binding CozguSiklik}"/>
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="7" x:Name="TxtZeminCozguTelAdet" Margin="2" Text="{Binding Zemin1CozguTel}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="8" x:Name="TxtHavCozguTelAdet" Margin="2" Text="{Binding Zemin2CozguTel}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="9" x:Name="TxtKenarCozguTelAdet" Margin="2" Text="{Binding HavCozguTel}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="10" x:Name="TxtSpigerCozguTelAdet" Margin="2" Text="{Binding TostHavBoyu}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="11" x:Name="TxtTarakNo" Margin="2" Text="{Binding TarakAdedi}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="12" x:Name="TxtTarakEni" Margin="2" Text="{Binding TarakEni}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="13" x:Name="TxtHamEni" Margin="2" Text="{Binding HamEn}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="14" x:Name="TxtMamulEni" Margin="2" Text="{Binding MamulEn}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="15" x:Name="TxtHHavYuksek" Margin="2" Text="{Binding HHavYuksek}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="16" x:Name="TxtMHavYuksek" Margin="2" Text="{Binding MHavYuksek}" />
        <cnt:CntIsdTextBox Grid.Column="1" Grid.Row="17" x:Name="TxtTaharNo" Margin="2" Text="{Binding TaharNo}" />
        <Label Content="Zemin 1:" Grid.Column="2" Grid.Row="2" />
        <Label Content="Zemin 2:" Grid.Column="2" Grid.Row="3" />
        <Label Content="Zemin 5:" Grid.Column="2" Grid.Row="4" />
        <Label Content="Zemin 6:" Grid.Column="2" Grid.Row="5" />
        <Label Content="Hav 3:" Grid.Column="2" Grid.Row="6" />
        <Label Content="Hav 4:" Grid.Column="2" Grid.Row="7" />
        <Label Content="Zemin 1:" Grid.Column="2" Grid.Row="9" />
        <Label Content="Zemin 2:" Grid.Column="2" Grid.Row="10" />
        <Label Content="Zemin 5:" Grid.Column="2" Grid.Row="11" />
        <Label Content="Zemin 6:" Grid.Column="2" Grid.Row="12" />
        <Label Content="Hav 3:" Grid.Column="2" Grid.Row="13" />
        <Label Content="Hav 4:" Grid.Column="2" Grid.Row="14" />
        <Label Content="Varyant:" Grid.Column="2" Grid.Row="15" />
        <Label Content="Cinsi:" Grid.Column="2" Grid.Row="16" />
        <telerik:RadComboBox Name="SelAtki1" Grid.Column="3" Grid.Row="2" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelAtki2" Grid.Column="3" Grid.Row="3" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelAtki3" Grid.Column="3" Grid.Row="4" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelAtki4" Grid.Column="3" Grid.Row="5" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelHav1" Grid.Column="3" Grid.Row="6" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelHav2" Grid.Column="3" Grid.Row="7" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelZemin1" Grid.Column="3" Grid.Row="9" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelZemin2" Grid.Column="3" Grid.Row="10" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelZemin3" Grid.Column="3" Grid.Row="11" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelZemin4" Grid.Column="3" Grid.Row="12" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelHav3" Grid.Column="3" Grid.Row="13" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="SelHav4" Grid.Column="3" Grid.Row="14" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsEditable="True" IsReadOnly="True"  IsTextSearchEnabled="True" TextSearchMode="Contains" IsFilteringEnabled="True" Margin="2"/>
        <telerik:RadComboBox Name="CmbKumasCinsi" Grid.Column="3" Grid.Row="16" SelectedValuePath="Id" DisplayMemberPath="Adi"  IsReadOnly="True" Margin="2"/>
        <TextBox Grid.Column="3" Grid.Row="15" x:Name="TxtVaryant" Margin="2" Text="{Binding Varyant}" MaxLength="20"/>
        <Label Content="Zemin Alt:" Grid.Column="4" Grid.Row="2" />
        <Label Content="Zemin Üst:" Grid.Column="4" Grid.Row="3" />
        <Label Content="Hav:" Grid.Column="4" Grid.Row="4" />
        <Label Content="Zemin Altlar:" Grid.Column="4" Grid.Row="6" />
        <Label Content="Zemin Üst:" Grid.Column="4" Grid.Row="7" />
        <Label Content="Hav:" Grid.Column="4" Grid.Row="8" />
        <Label Content="Zemin Altlar:" Grid.Column="4" Grid.Row="10" />
        <Label Content="Zemin Üstler:" Grid.Column="4" Grid.Row="11" />
        <Label Content="Havlar:" Grid.Column="4" Grid.Row="12" />
        <Label Content="Toplam:" Grid.Column="4" Grid.Row="13" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="2" x:Name="TxtAtki1grm" Margin="2" Text="{Binding ZeminAltOrmeAgirlik}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="3" x:Name="TxtAtki2grm" Margin="2" Text="{Binding ZeminUstOrmeAgirlik}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="4" x:Name="TxtAtki3grm" Margin="2" Text="{Binding HavOrmeAgirlik}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="6" x:Name="TxtHav3grm" Margin="2" Text="{Binding ZeminAltRack}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="7" x:Name="TxtHav4grm" Margin="2" Text="{Binding ZeminUstRack}" />        
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="8" x:Name="TxtHavSevki" Margin="2" Text="{Binding HavRack}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="10" x:Name="ZeminAltTostAgirlik" Margin="2" Text="{Binding ZeminAltTostAgirlik}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="11" x:Name="ZeminUstTostAgirlik" Margin="2" Text="{Binding ZeminUstTostAgirlik}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="12" x:Name="HavTostAgirlik" Margin="2" Text="{Binding HavTostAgirlik}" />
        <cnt:CntIsdTextBox Grid.Column="5" Grid.Row="13" x:Name="ToplamTostAgirlik" Margin="2" Text="{Binding ToplamTostAgirlik}" />
