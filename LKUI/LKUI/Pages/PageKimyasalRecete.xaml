                            <RowDefinition Height="25" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="160*" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="160*" />
                            <RowDefinition Height="25" />
                        </Grid.RowDefinitions>
                        <Border Background="#FFC1CFE8">
