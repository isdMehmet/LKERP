        </cnt:CntIsdCombo>
        <cnt:CntIsdCombo x:Name="CmbHav4TarakTahar" Grid.Column="7" Grid.Row="7" Grid.ColumnSpan="2" Margin="2" Text="{Binding Hav4TarakTahar}" SelectedValuePath="Content" TabIndex="7">
