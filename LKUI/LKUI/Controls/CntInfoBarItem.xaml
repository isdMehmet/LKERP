<UserControl x:Class="LKUI.Controls.CntInfoBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="75" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Border Name="BrdAna" BorderThickness="0" BorderBrush="CornflowerBlue">
        <StackPanel Orientation="Vertical" Margin="3" Name="Stack">
            <TextBlock Name="TxtDurumAciklama" Text="{Binding DurumAdi}" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="14" FontWeight="Bold"></TextBlock>
            <TextBlock Name="TxtDurumMiktar" Text="0" HorizontalAlignment="Center" Margin="0,3,0,0" FontSize="20" FontWeight="Bold" Foreground="#FF9D2E2E"></TextBlock>
        </StackPanel>
    </Border>
</UserControl>
