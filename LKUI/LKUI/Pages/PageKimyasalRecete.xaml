                            <Button Content="-" Margin="1,0" Width="25" x:Name="BtnSilOnİslem" Click="BtnSilOnİslem_Click" FontSize="15" FontWeight="Bold" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Margin="2,0" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1">
