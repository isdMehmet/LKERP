            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="Reçete No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding ReceteNo}" />
                <telerik:GridViewDataColumn Header="Reçete Tarih" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Tarih,StringFormat='dd.MMM.yyyy'}"  />
                <telerik:GridViewDataColumn Header="Program No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Program}" />
                <telerik:GridViewDataColumn Header="Makina Adı" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Makina}" />
                <telerik:GridViewDataColumn Header="Renk No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding RenkKodu}" />
                <telerik:GridViewCheckBoxColumn Header="Reçete Oluşturuldu"/> <!--CheckBoxlarda Değişiklik yapılamayacak-->
                <telerik:GridViewCheckBoxColumn Header="Aktif Mi" IsReadOnly="True" DataMemberBinding="{Binding AktifMi}"/>
                <telerik:GridViewCheckBoxColumn Header="Stoktan Düştü" IsReadOnly="True" DataMemberBinding="{Binding StoktanDusulduMu}"/>
                <telerik:GridViewCheckBoxColumn Header="Güncelledim" IsReadOnly="True" DataMemberBinding="{Binding NuanslariGuncelledim}"/>
            </telerik:RadGridView.Columns>
            <telerik:RadGridView.ContextMenu>
                <ContextMenu>
                    <ContextMenu.ItemsSource>
                        <CompositeCollection>
                            <MenuItem x:Name="menuItemStokCikisiYap" Foreground="Black" Header="Stoktan Düş"  IsEnabled="True" Click="menuItemStokCikisiYap_Click"/>
                            <MenuItem x:Name="menuItemLogoyaAktar" Foreground="Black" Header="Kimyasal Sarf Fişi Aktar"  IsEnabled="True" Click="menuItemLogoyaAktar_Click"/>
                        </CompositeCollection>
                    </ContextMenu.ItemsSource>
                </ContextMenu>
            </telerik:RadGridView.ContextMenu>
        </telerik:RadGridView>
        <Border  BorderThickness="1" BorderBrush="Black" Grid.ColumnSpan="7" Grid.Row="4">
            <Label Content="PARTİ DETAYLARI" FontWeight="Bold" FontSize="10" Background="#FFC1CFE8" HorizontalContentAlignment="Center" />
        </Border>
        <Grid Grid.ColumnSpan="7" Grid.Row="5" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <telerik:RadGridView AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="0" Name="DGridPartiDetaylari" telerik:StyleManager.Theme="Summer" ShowGroupPanel="False" Background="#FFF0F0F0">
                <telerik:RadGridView.Columns>
                    <telerik:GridViewDataColumn Header="Tarih" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Tarih,StringFormat='dd.MMM.yyyy'}" />
                    <telerik:GridViewDataColumn Header="Parti No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding PartiNo}" />
                    <telerik:GridViewDataColumn Header="Renk No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding RenkNo}" />
                    <telerik:GridViewDataColumn Header="Tip No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding TipNo}"/>
                    <telerik:GridViewDataColumn Header="Apre Kodu" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding ApreKodu}"/>
                    <telerik:GridViewDataColumn Header="Sipariş No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding SozlesmeNo}" />
                    <telerik:GridViewDataColumn Header="Müşteri Adı" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding MusteriAdi}" />
                    <telerik:GridViewDataColumn Header="Partilenecek Metre" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding PartiMetre}" />
                    <telerik:GridViewDataColumn Header="Açılmış Metre" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding AcilmisMetre}" />
                    <telerik:GridViewDataColumn Header="Tartılan Kg" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding TartilanKg}" />
                    <telerik:GridViewColumn>
                        <telerik:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="BtnInfo" Content="Not" Click="BtnInfo_Click" Visibility="{Binding Converter={StaticResource ResourceKey=ReceteMesajVisibilityConverter}}" VerticalContentAlignment="Top" Background="Red"/>
                            </DataTemplate>
                        </telerik:GridViewColumn.CellTemplate>
                    </telerik:GridViewColumn>
                    <telerik:GridViewDataColumn Header="Açıklama" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Aciklama}" />
                    <telerik:GridViewDataColumn Header="Finish Kodu" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding FinishKodu}"  />                                        
                    <telerik:GridViewDataColumn Header="Boyahane Not" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding BoyahaneNot}"/>
                    <telerik:GridViewDataColumn Header="Boyahane Onayı" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding BoyahaneOnay}" />
                    <telerik:GridViewDataColumn Header="Makina Cinsi" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Makina}" />
                    <telerik:GridViewDataColumn Header="Diğer Tip No 1" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding DigerTipNo1}" />
                    <telerik:GridViewDataColumn Header="Diğer Tip No 2" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding DigerTipNo2}" />
                    <telerik:GridViewDataColumn Header="Diğer Tip No 3" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding DigerTipNo3}" />
                </telerik:RadGridView.Columns>
                <telerik:RadGridView.ContextMenu>
                    <ContextMenu>
                        <ContextMenu.ItemsSource>
                            <CompositeCollection>
                                <MenuItem x:Name="menuItemEklePartiDetay" Foreground="Black" Header="Ekle"  IsEnabled="True" Click="menuItemEklePartiDetay_Click"/>
                            </CompositeCollection>
                        </ContextMenu.ItemsSource>
                    </ContextMenu>
                </telerik:RadGridView.ContextMenu>
            </telerik:RadGridView>          
        </Grid>
        <Grid Grid.ColumnSpan="7" Grid.Row="7">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>            
        </Grid>
        <Border  BorderThickness="1" BorderBrush="Black" Grid.Column="7" Grid.ColumnSpan="4" Grid.Row="2" Background="#FFC1CFE8"  Margin="3,0,0,0">
            <Label Content="PARTİ SEÇ" HorizontalAlignment="Center" FontWeight="Bold" FontSize="10" />
        </Border>
        <Grid Grid.Column="7" Grid.Row="3" Grid.ColumnSpan="4" Margin="3,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="128*" />
                <ColumnDefinition Width="41*" />
                <ColumnDefinition Width="43*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="116*" />
                <RowDefinition Height="33" />
            </Grid.RowDefinitions>
            <ScrollViewer Grid.ColumnSpan="3">
                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding ReceteninPartileri}" Name="DGridRecetePartileri" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Parti No" Width="Auto" IsReadOnly="True" Binding="{Binding PartiNo}"/>
                        <DataGridTemplateColumn Header="Tartılan Kg">
                            <DataGridTemplateColumn.CellTemplate >
                                <DataTemplate>
                                    <TextBox x:Name="TxtTartilanKg" Text="{Binding TartilanKg, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Açılan Metre" Width="Auto" IsReadOnly="True" Binding="{Binding AcilmisMetre}" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
            <Button Content="Kaydet" Grid.Column="1"  Grid.Row="1"  Name="BtnPartiKaydet" Click="BtnPartiKaydet_Click" />
            <Button Content="Sil" Grid.Column="2"  Grid.Row="1"  Name="BtnPartiSil" Click="BtnPartiSil_Click" />
        </Grid>
        <Border  BorderThickness="1" BorderBrush="Black" Grid.Column="7" Grid.ColumnSpan="4" Grid.Row="4" Background="#FFC1CFE8"  Margin="3,0,0,0">
            <Label Content="AÇIKLAMALAR" HorizontalAlignment="Center" FontWeight="Bold" FontSize="10" />
        </Border>
        <ScrollViewer Grid.Column="7" Grid.Row="5" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <TextBox Name="TxtRenkAciklama" Text="{Binding RenkAciklama}" FontWeight="Bold" Foreground="Red" TextWrapping="Wrap" IsReadOnly="True"/>
        </ScrollViewer>
        <toolkit:ChildWindow x:Name="ChildMuadilReceteler" IsModal="True" WindowStartupLocation="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="100" Grid.RowSpan="100">
            <Grid Width="700" Height="400">
                <telerik:RadGridView AutoGenerateColumns="False"  Name="DGridMuadilReceteler" Margin="0,1,0,0"
                             IsReadOnly="False" ShowGroupPanel="False" telerik:StyleManager.Theme="Summer"  Grid.Row="0" Background="#FFF0F0F0">
                    <telerik:RadGridView.Columns>
                        <telerik:GridViewDataColumn Header="Reçete No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding ReceteNo}" />
                        <telerik:GridViewDataColumn Header="Tarih" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Tarih,StringFormat='dd.MMM.yyyy'}"  />                        
                        <telerik:GridViewDataColumn Header="Makine" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Makine}" />
                        <telerik:GridViewDataColumn Header="Onaylı" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding AktifMi}" />
                        <telerik:GridViewDataColumn Header="Güncel" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding NuanslariGuncelledim}" />
                        <telerik:GridViewDataColumn Header="Müşteri" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding Musteri}" MaxWidth="100" />
                        <telerik:GridViewDataColumn Header="Tip No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding TipNo}" />
                        <telerik:GridViewDataColumn Header="Parti No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding PartiNo}" />
                        <telerik:GridViewDataColumn Header="Renk No" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding RenkNo}"/>
                        <telerik:GridViewDataColumn Header="Renk Adi" Width="Auto" IsReadOnly="True" DataMemberBinding="{Binding RenkAdi}"/>
                    </telerik:RadGridView.Columns>
                    <telerik:RadGridView.ContextMenu>
                        <ContextMenu>
                            <ContextMenu.ItemsSource>
                                <CompositeCollection>
                                    <MenuItem x:Name="menuItemMuadilSec" Foreground="Black" Header="Seç"  IsEnabled="True" Click="menuItemMuadilSec_Click"/>                                    
                                </CompositeCollection>
                            </ContextMenu.ItemsSource>
                        </ContextMenu>
                    </telerik:RadGridView.ContextMenu>
                </telerik:RadGridView>
            </Grid>
        </toolkit:ChildWindow>
        <toolkit:ChildWindow x:Name="ChildReceteEkle" IsModal="True" WindowStartupLocation="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="100" Grid.RowSpan="100">
            <Grid Width="235" Height="230" DataContext="{Binding Recete}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="92*" />
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="54*" />
                    <ColumnDefinition Width="54*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="118*" />
                </Grid.RowDefinitions>
                <Label Content="Reçete No:" />
                <Label Content="Makine No:" Grid.Row="1" />
                <Label Content="Program No:" Grid.Row="2" Visibility="Hidden"/>
                <Label Content="Personel:" Grid.Row="3" Visibility="Hidden"/>
                <Label Content="Tarih :" Grid.Row="3" />
                <Label Content="Toplu Reçete :" Grid.Row="4" />
                <Label Content="Renk No:" Grid.Row="2" />
                <TextBox Grid.Column="1" Name="TxtReceteNo" IsEnabled="False" Background="#FFB7D3FF" Margin="2" Grid.ColumnSpan="3" />
                <ComboBox x:Name="CmbMakinaNo" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="2" DisplayMemberPath="Adi" SelectedValuePath="Id" ></ComboBox>
                <TextBox Grid.Column="1" Name="TxtProgramNo" Grid.Row="2" Margin="2" Grid.ColumnSpan="3" Text="{Binding Program}" Visibility="Hidden"  />
                <ComboBox x:Name="CmbPersonel" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="2" DisplayMemberPath="Adi" SelectedValuePath="Id" SelectedValue="{Binding PersonelId, UpdateSourceTrigger=PropertyChanged}" Visibility="Hidden"></ComboBox>
                <ComboBox x:Name="CmbRenkNo" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Margin="2" DisplayMemberPath="Kodu" SelectedValuePath="Id" SelectedValue="{Binding RenkId, UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                <DatePicker x:Name="DPTarih" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="2" SelectedDate="{Binding Tarih}" />
                <CheckBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Name="ChckDurum" VerticalAlignment="Center" Height="18" Width="26" Margin="0,8" IsChecked="{Binding TopluRecete}" />
                <Button Content="Kaydet" Grid.Column="2" Grid.Row="6" Name="BtnKaydet" Margin="2" Click="BtnKaydet_Click" />
                <Button Content="Vazgeç" Grid.Column="3" Grid.Row="6" Name="BtnVazgec" Margin="2" Click="BtnVazgec_Click" />
            </Grid>
        </toolkit:ChildWindow>
        <toolkit:ChildWindow x:Name="ChildGenel" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="100" Grid.RowSpan="100" Closed="ChildGenel_Closed" IsModal="True" WindowStartupLocation="Manual"/>
    </Grid>
</UserControl>
