        </cnt:CntIsdCombo>
        <cnt:CntIsdCombo x:Name="CmbZemin2TarakTahar" Grid.Column="7" Grid.Row="3" Grid.ColumnSpan="2" Margin="2" Text="{Binding Zemin2TarakTahar}" SelectedValuePath="Content" TabIndex="7">
