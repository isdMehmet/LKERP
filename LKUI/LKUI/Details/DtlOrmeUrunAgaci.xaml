        <Label Content="Zemin 5:" Grid.Column="6" Grid.Row="4" />
        <Label Content="Zemin 6:" Grid.Column="6" Grid.Row="5" />
        <Label Content="Hav 3:" Grid.Column="6" Grid.Row="6" />
        <Label Content="Hav 4:" Grid.Column="6" Grid.Row="7" />
        <cnt:CntIsdCombo x:Name="CmbZemin1TarakTahar" Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="2" Margin="2" Text="{Binding Zemin1TarakTahar}" SelectedValuePath="Content" TabIndex="7">
