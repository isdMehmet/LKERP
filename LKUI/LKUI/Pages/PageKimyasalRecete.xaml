                        </ScrollViewer>
                        <StackPanel Orientation="Horizontal" Grid.Row="3">
                            <Button Content="+" Margin="1,0" Width="25" x:Name="BtnEkleYikama" Click="BtnEkleYikama_Click" FontSize="15" FontWeight="Bold" />
                            <Button Content="-" Margin="1,0" Width="25" x:Name="BtnSilYikama" Click="BtnSilYikama_Click" FontSize="15" FontWeight="Bold" />
                        </StackPanel>
                    </Grid>
