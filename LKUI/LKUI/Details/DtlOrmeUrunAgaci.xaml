        <Label Content="Özellikler" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="1" FontWeight="Bold" />
        <Label Content="İplik Numaraları" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="1" FontWeight="Bold" />
        <Label Content="İplik Renk Raporları" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="8" FontWeight="Bold" />
