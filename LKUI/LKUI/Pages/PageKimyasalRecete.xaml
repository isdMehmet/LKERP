                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Oran,UpdateSourceTrigger=PropertyChanged}" Background="#FFCECECE"></TextBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn MinWidth="60" Header="Kimyasal">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding ListKimyasallar}" DisplayMemberPath="Adi" SelectedValuePath="Id" SelectedValue="{Binding KimyasalId, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Gr/Lt-Oran(%)">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox x:Name="CmbGrLtOran" SelectedValue="{Binding GrLtOran,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content">
                                                    <ComboBoxItem Content="Gr/Lt" />
                                                    <ComboBoxItem Content="Oran" />
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Miktar">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Miktar,UpdateSourceTrigger=PropertyChanged}" Background="#FFCECECE"></TextBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        <ScrollViewer Grid.Row="5">
