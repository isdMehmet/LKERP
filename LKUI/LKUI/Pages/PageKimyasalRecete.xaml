                            <Button Content="Başka Reçete" Grid.Column="3" Name="BtnMuadilYukle" Margin="2" Click="BtnMuadilYukle_Click" />
                            <Button Content="Lab Renk Kartı" Grid.Column="4" Name="BtnReceteYukle" Margin="2" Click="BtnReceteYukle_Click" />
                        </Grid>
                        <ScrollViewer Grid.Row="2">
