                                    <DataGridTemplateColumn Header="Oran">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Oran,UpdateSourceTrigger=PropertyChanged}" Background="#FFCECECE" IsReadOnly="False"></TextBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn MinWidth="60" Header="Kimyasal">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding ListKimyasallar}" DisplayMemberPath="Adi" SelectedValuePath="Id" SelectedValue="{Binding KimyasalId, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Gr/Lt-Oran(%)">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox x:Name="CmbGrLtOran" SelectedValue="{Binding GrLtOran,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" IsReadOnly="True">
                                                    <ComboBoxItem Content="Gr/Lt" />
                                                    <ComboBoxItem Content="Oran" />
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Miktar">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Miktar,UpdateSourceTrigger=PropertyChanged}" Background="#FFCECECE" IsReadOnly="True"></TextBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        <Border Background="#FFC1CFE8" Grid.Row="4" Margin="1,0,-1,0">
                            <Label Content="KİMYASAL" HorizontalAlignment="Center" FontWeight="Bold" />
                        </Border>
                        <ScrollViewer Grid.Row="5">
                            <DataGrid AutoGenerateColumns="False" Name="DGridKimyasal" ItemsSource="{Binding Kimyasallar}" IsReadOnly="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Oran">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Oran,UpdateSourceTrigger=PropertyChanged}" Background="#FFCECECE" IsReadOnly="False"></TextBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn MinWidth="60" Header="Kimyasal">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding ListKimyasallar}" DisplayMemberPath="Adi" SelectedValuePath="Id" SelectedValue="{Binding KimyasalId, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Gr/Lt-Oran(%)">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox x:Name="CmbGrLtOran" SelectedValue="{Binding GrLtOran,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content" IsReadOnly="True">
                                                    <ComboBoxItem Content="Gr/Lt" />
                                                    <ComboBoxItem Content="Oran" />
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Miktar">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Miktar,UpdateSourceTrigger=PropertyChanged}" Background="#FFCECECE" IsReadOnly="True"></TextBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        <StackPanel Grid.Row="6" Orientation="Horizontal">
                            <Button Content="+" Margin="1,0" x:Name="BtnEkleKimyasal" Width="25" Click="BtnEkleKimyasal_Click" FontSize="15" FontWeight="Bold" />
                            <Button Content="-" Margin="1,0" x:Name="BtnSilKimyasal" Width="25" Click="BtnSilKimyasal_Click" FontSize="15" FontWeight="Bold" />
                        </StackPanel>
                        <Grid Grid.Row="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="40*" />
                                <ColumnDefinition Width="40*" />
                                <ColumnDefinition Width="51*" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>
                            <Border BorderThickness="1" BorderBrush="Black" Height="1" Grid.ColumnSpan="5" VerticalAlignment="Top"></Border>
                            <Label Content="FLOTE:" VerticalAlignment="Center" FontWeight="Bold" />
